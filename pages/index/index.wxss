/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 80px;
}
.login-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
  width: 100%;
}
.login-content{
  padding: 5rpx;
  flex: 2 1 auto;
  height: 38rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
}
.loginicon {
  width: 20px;
  height: 20px;
  padding-right: 5px;
}